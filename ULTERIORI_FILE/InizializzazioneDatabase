CREATE TABLE AZIENDA
(
NOME VARCHAR(50) PRIMARY KEY,
INDIRIZZO VARCHAR(50),
RESPONSABILE VARCHAR(30),
NUMEROTELEFONO CHAR(10),
EMAIL VARCHAR (50)
);

CREATE TABLE DIPENDENTE
(
NUMPATENTE CHAR(10),
NOME VARCHAR(30),
COGNOME VARCHAR(30),
EMAIL VARCHAR(50),
DATADISCADENZA DATE,
USERNAME VARCHAR(30) PRIMARY KEY,
PASSWORD CHAR(7),
IDAZIENDA VARCHAR(50)
);
CREATE TABLE PRENOTAZIONE
(
NUMPRENOTAZIONE INT PRIMARY KEY,
IDVEICOLO CHAR(7),
DATADIRITIRO DATE,
DATADICONSEGNA DATE,
IDDIPENDENTE VARCHAR(30)
);
CREATE TABLE VEICOLO
(
TARGA CHAR(7) PRIMARY KEY,
MODELLO VARCHAR(30),
NUMPASSEGGERI INT,
TARIFFA INT,
ALIMENTAZIONE VARCHAR(7),
STATOVEICOLO VARCHAR(30)
);
ALTER TABLE DIPENDENTE ADD FOREIGN KEY (IDAZIENDA) REFERENCES AZIENDA(NOME);
ALTER TABLE PRENOTAZIONE ADD FOREIGN KEY (IDDIPENDENTE) REFERENCES DIPENDENTE(USERNAME);
ALTER TABLE PRENOTAZIONE ADD FOREIGN KEY (IDVEICOLO) REFERENCES VEICOLO(TARGA);